<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/song_list_item_layout"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:background="#4266ff" >
    
    <ImageView 
        android:id="@+id/title_songscreen_album_art"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/grayscale_logo"
        android:background="#FFFFFF"/>

    <TwoLineListItem
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/title_songscreen_text_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:paddingLeft="20dp"
            android:text="@string/songscreen_text_big"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#DFDFDF"
            android:singleLine="true"
            android:ellipsize="marquee"
        	android:marqueeRepeatLimit ="marquee_forever"
        	android:scrollHorizontally="true" />

        <TextView
            android:id="@+id/title_songscreen_text_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignStart="@id/title_songscreen_text_1"
            android:layout_below="@id/title_songscreen_text_1"
            android:paddingLeft="20dp"
            android:text="@string/songscreen_text_small"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#DFDFDF"
            android:singleLine="true"
            android:ellipsize="marquee"
        	android:marqueeRepeatLimit ="marquee_forever"
        	android:scrollHorizontally="true" />
    </TwoLineListItem>
    
    <ImageView 
        android:id="@+id/title_imgqueuebutton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/player_queue" />

</LinearLayout>